@page
@model RazorPagesDemoApp.Pages.Employees.AddModel

@{
    var message = ViewData["Message"]?.ToString();
}

<h1 class="display-4 mb-4">Add New Employee</h1>
<form method="post">
@if(!string.IsNullOrEmpty(message))
{
    <div class="alert alert-success" role="alret">
        @message
    </div>
}
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="mb-3">
                <label for="full-name" class="form-label">Full Name:</label>
                <input type="text" id="full-name" class="form-control" asp-for="AddEmployeeRequest.Full_Name"/>
            </div>
            <div class="mb-3">
                <label for="email-address" class="form-label">Email Address:</label>
                <input type="text" id="email-address" class="form-control" asp-for="AddEmployeeRequest.Email_Address"/>
            </div>
            <div class="mb-3">
                <label for="salary" class="form-label">Salary:</label>
                <input type="text" id="salary" class="form-control" asp-for="AddEmployeeRequest.Salary"/>
            </div>
            <div class="mb-3">
                <label for="dob" class="form-label">Date of Birth:</label>
                <input type="text" id="dob" class="form-control" asp-for="AddEmployeeRequest.DateOfBirth"/>
            </div>
            <div class="mb-3">
                <label for="department" class="form-label">Department:</label>
                <input type="text" id="department" class="form-control" asp-for="AddEmployeeRequest.Department"/>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
        <div class="col-md-6">
            <img src="~/images/add-employee.jpg" alt="Add Employee" class="img-fluid">
        </div>

</div>
  
</form>
